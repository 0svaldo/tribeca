{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/tribeca/service/main.js",
            "cwd": "${workspaceRoot}/tribeca/service",
            "args": [
                "debug"
            ],
            "outFiles": [
                "${workspaceRoot}/tribeca/service/**/*"
            ],
            "sourceMaps": true,
            "protocol": "inspector",
            "showAsyncStacks": true
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "port": 5858,
            "protocol": "inspector"
        }
    ]
}